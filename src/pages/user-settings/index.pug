extends ../../blocks/layout
include ../../mixins/link/index
block head
    title Настройки пользователя — #{title}
    script(src="./script.js" type="module")
block content
    h1(hidden) Настройки пользователя
    main.profile-container
        article.profile
            header.profile-header
                img.profile-avatar(src="../../images/default-avatar.svg")
                div.profile-title
                    h2.profile-name Иван
                    p 
                        +link('Изменить данные', '/')
                    p
                        +link('Изменить пароль', '/')
            - 
                const userData = [{
                    name: 'Почта',
                    value: 'pochta@yandex.ru',
                },{
                    name: 'Логин',
                    value: 'ivanivanov',
                },{
                    name: 'Имя',
                    value: 'Иван',
                },{
                    name: 'Фамилия',
                    value: 'Иванов',
                },{
                    name: 'Имя в чате',
                    value: 'Иван',
                },{
                    name: 'Телефон',
                    value: '+7 (909) 967 30 30'
                }];
            ul.profile-list
                each item in userData
                    li
                        span= item.name
                        span= item.value
            +link('Вернуться', '/')(class="return-link")

