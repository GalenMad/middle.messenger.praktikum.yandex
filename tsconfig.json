{
    "compilerOptions": {
        "downlevelIteration": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "target": "ES6",
        "moduleResolution": "Node",
        "allowSyntheticDefaultImports": true,
        "typeRoots": [
            "src/index.d.ts",
            "node_modules/@types"
        ]
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*.ts"
    ]
}
