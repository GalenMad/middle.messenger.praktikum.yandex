{
    "compilerOptions": {
        "outDir": "dist",
        "target": "es2016",
        "declaration": true,
        "module": "commonjs",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "sourceMap": true,
        "strictNullChecks": true
    },
    "files": [
        "src/app.ts"
    ],
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "src/**/*.spec.ts",
        "node_modules",
        "dist"
    ]
}
